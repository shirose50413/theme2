<div>
  <%= flash[:notice] %>
</div>
<h1><strong>Books</strong></h1>
<p>title</p>
<p>body</p>
<% @books.each do |book| %>

  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <span><%= link_to "Show", book_path(book.id) %></span>
  <span><%= link_to "Edit", edit_book_path(book.id) %>
  <span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></span>
  <br>
<% end %>

<h2><strong>New book</strong></h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url:books_path ,method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>