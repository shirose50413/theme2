<h1><strong>Books</strong></h1>

<%= @books.each do |book| %>

  <p>title</p>
  <span><%= book.title %></span>

  <p>body</p>
  <span><%= book.body %></span>

<% end %>

<h2><strong>New book</strong></h2>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>